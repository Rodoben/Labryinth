<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout"
    android:background="@drawable/back"
    tools:context="com.example.ronaldbenjamin.labryinth.LoginPage">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="353dp"
        android:layout_height="267dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="?android:attr/textColorHintInverse"
        app:cardCornerRadius="15dp"
        app:cardElevation="@dimen/cardview_default_radius"
        app:contentPadding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:background="@drawable/buttonstyle"
            android:text="Sign in"
            android:textColor="#ffffff" />


        <EditText
            android:id="@+id/editText3"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/editback"
            android:ems="10"
            android:hint="Email/Register-no"
            android:inputType="textEmailAddress"
            android:singleLine="false"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="178dp" />

        <EditText
            android:id="@+id/editText4"

            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:height="@android:dimen/notification_large_icon_height"
            android:background="@drawable/editback"
            android:ems="10"
            android:hint="Enter Password"

            android:inputType="textPassword"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="223dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Need an Account? Sign Up"
            android:textAlignment="center"
            android:textSize="16sp" />


    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
